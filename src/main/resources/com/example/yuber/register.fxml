<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox id="root" alignment="CENTER" prefHeight="374.0" prefWidth="426.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.yuber.controllers.SampleController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

   <VBox id="paneSmall" alignment="BASELINE_CENTER" prefHeight="296.0" prefWidth="233.0">
      <Label id="title">Yuber</Label>
      <TextField id="input" fx:id="username" prefWidth="152.0" text="Name">Username</TextField>
      <TextField text="Surname" />
      <TextField text="Address" />
      <TextField text="Phone number" />
      <TextField text="Email" />
      <TextField text="Username" />
      <PasswordField id="input" fx:id="password">Password</PasswordField>
      <CheckBox mnemonicParsing="false" prefWidth="145.0" text="Driver">
         <VBox.margin>
            <Insets right="220.0" />
         </VBox.margin>
      </CheckBox>
      <CheckBox mnemonicParsing="false" text="Customer">
         <VBox.margin>
            <Insets right="225.0" />
         </VBox.margin>
      </CheckBox>
      <Button id="btn-default-small" onAction="#onHelloButtonClick" text="Sign up" />
   </VBox>
</VBox>
