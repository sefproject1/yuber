<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootPane" id="root" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.yuber.controllers.CanceledController">
    <padding>
        <Insets bottom="75.0" left="75.0" right="75.0" top="75.0" />
    </padding>

    <VBox id="paneLarge" VBox.vgrow="ALWAYS">
        <Label id="title">Oops :(</Label>
        <Label id="info">Seems like your ride was canceled by the driver.</Label>
        <HBox spacing="5">
            <Button id="btn-default-large" onAction="#onPlaceOrderButtonClick" style="-fx-max-width: 5000" HBox.hgrow="ALWAYS">Place a new order</Button>
            <Button id="btn-error-large" onAction="#onLogoutButtonClick" style="-fx-max-width: 5000" HBox.hgrow="ALWAYS">Logout</Button>
        </HBox>
    </VBox>
</VBox>
