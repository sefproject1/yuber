<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="rootPane" id="root" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.yuber.controllers.CustomerWaitController">
    <padding>
        <Insets bottom="75.0" left="75.0" right="75.0" top="75.0" />
    </padding>

    <VBox id="paneLarge" VBox.vgrow="ALWAYS">
        <Label id="title">Looking for a ride...</Label>
        <Label id="info">Please wait while we are looking for a ride. You can cancel anytime, but remember that you'll need to pay more for the next order.</Label>
        <HBox spacing="5">
            <Button id="btn-error-large" onAction="#onCancelButtonClick" style="-fx-max-width: 5000" HBox.hgrow="ALWAYS">Cancel Order</Button>
        </HBox>
        <VBox>
            <Label fx:id="sourceAddress" id="header"></Label>
            <Label fx:id="destinationAddress" id="header"></Label>
        </VBox>
    </VBox>
</VBox>
